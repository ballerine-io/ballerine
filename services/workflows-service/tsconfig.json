{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": ["ES2020"],
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/env": ["src/env.ts"]
    }
  },
  "include": ["src", "plugins", "prisma/data-migrations/**/*"]
}
